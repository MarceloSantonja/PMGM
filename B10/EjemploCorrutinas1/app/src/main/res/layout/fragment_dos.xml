<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#F44336"
        android:textSize="40dp"
        android:text="0"
        android:layout_height="wrap_content"
        android:id="@+id/tiempo"/>
    <Button
        android:id="@+id/runBlocking"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="RunBlocking"/>
    <Button
        android:id="@+id/globalScope"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="GlobalScope"/>
    <Button
        android:id="@+id/coroutineScope"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CoroutineScope"/>
    <Button
        android:id="@+id/coroutineAsync"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CoroutineAsync"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texto"/></ScrollView>
</LinearLayout>